{
	"compilerOptions": {
		"sourceMap": true,
		"outDir": "assets",
		"noImplicitAny": false,
		"moduleResolution": "Node",
		"module": "ESNext",
		"target": "ES6",
		"jsx": "preserve",
		"allowJs": true,
		"esModuleInterop": true,
		"baseUrl": "src",
		"typeRoots": [
			"./node_modules/@types",
			".src/@types",
		],
		"types": [
			"webpack-env",
			"jquery",
		],
		"lib": [
			"DOM",
			"ESNext",
		],
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
	]
}